<%= stylesheet_link_tag "shopping_lists", "data-turbo-track": "reload" %>

<div class="shopping-list-container">

    <h1>Shopping List</h1>

    <div class="amount-and-total-value-container">
        <p>Amount of food items to buy: <%= @recipe_foods.length %></p>
        <p>Total value of food needed: $<%= @total_value %></p>
    </div>

    <table>
        <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>

        <% @recipe_foods.each do |element| %>
            <tr>
                <td><%= element.food.name %></td>
                <td><%= element.quantity %></td>
                <td>$<%= element.food.price * element.quantity %></td>
            </tr>
        <% end %>
    </table>

</div>