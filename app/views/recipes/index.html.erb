<%= stylesheet_link_tag "recipe", "data-turbo-track": "reload" %>

<div class="recipes_container">
  <p style="color: green"><%= notice %></p>

  <%= button_to "New recipe", new_user_recipe_path(user_id: current_user.id), :method => :get %>

  <% if @recipes.length > 0 %>
    <div id="recipes">
      <% @recipes.each do |recipe| %>
        <%= render recipe %>
      <% end %>
    </div>
  <% else %>
    <h3>No Recipes To Show</h3>
  <% end %>

</div>
